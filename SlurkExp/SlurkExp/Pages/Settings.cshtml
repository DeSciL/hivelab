@page
@model SettingsModel
@{
    ViewData["Title"] = "SettingsModel";
}

<div class="card shadow">
    <form method="post">
        <div class="card-header">
            <div class="d-flex justify-content-between">
                <div class="dpCardHeaderTitle"><h5><i class="bi-gear"></i> Settings</h5></div>
                <div class="dpCardHeaderControl">
                    <button class="btn btn-outline-dark" type="submit">
                        <i class="bi bi-save"></i> <span class="d-none d-md-inline"> Update</span>
                    </button>
                    <a class="btn btn-outline-dark" href="~/"><i class="bi-arrow-left-square"></i> Back</a>
                </div>
            </div>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-6">
                    <div class="dpDetailHeader"><i class="bi-bookmarks"></i> Server</div>
                    <div class="py-2">
                        <div class="form-check form-switch">
                            <label asp-for="Input.IsServerClosed" class="form-label">Server Close</label>
                            <input asp-for="Input.IsServerClosed" class="form-check-input" type="checkbox">
                        </div>
                    </div>
                    <div class="py-2">
                        <div class="form-check form-switch">
                            <label asp-for="Input.IsRandomDispatch" class="form-label">Random Dispatch</label>
                            <input asp-for="Input.IsRandomDispatch" class="form-check-input" type="checkbox">
                        </div>
                    </div>
                </div>

                <div class="col-md-6">



                </div>
            </div>
        </div>
        <div class="card-footer">
        </div>
    </form>
</div>
