@page
@model IndexModel
@{
    ViewData["Title"] = "LogEvents";
}

@section Head {
    @if (Model.Refresh > 0)
    {
        <meta http-equiv="refresh" content="@Model.Refresh">
    }
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="dpCardHeaderTitle"><h5><i class="bi-box"></i> LogEvents</h5></div>
            <div class="dpCardHeaderControl">
                <a class="btn btn-outline-dark" href="~/"><i class="bi-arrow-left-square"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm dpTable">
            <thead>
                <tr>
                    <th width="50px">Id</th>
                    <th width="75px">Status</th>
                    <th width="75px">ClientId</th>
                    <th width="150px">Operation</th>
                    <th>Data</th>
                    <th width="175px">Created</th>
                    @*<th width="75px">&nbsp;</th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.LogEvents)
                {
                    <tr>
                        <td>@p.LogEventId</td>
                        <td>@p.Status</td>
                        <td>
                            @if(p.ClientId > 1)
                            {
                                <a href="~/clients/detail/@p.ClientId">@p.ClientId</a>
                            }
                        </td>
                        <td>@p.Operation</td>
                        <td>
                            @if (!string.IsNullOrEmpty(@p.Data))
                            {
                                @p.Data.Replace("\":\"", "\": \"")
                            }
                        </td>
                        <td>@p.Created.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                        @*<td align="right"><a href="~/logevents/edit/@p.LogEventId">Detail</a></td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <nav aria-label="Pagination">
            <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
                      cs-paging-pagenumber="@Model.Paging.CurrentPage"
                      cs-paging-totalitems="@Model.Paging.TotalItems"
                      cs-pagenumber-param="p"
                      cs-show-first-last="false"
                      cs-suppress-empty-nextprev="true"
                      cs-suppress-inactive-firstlast="true"
                      cs-first-page-text="First"
                      cs-last-page-text="Last"
                      cs-pager-ul-class="pagination"
                      cs-pager-li-current-class="page-item active"
                      cs-pager-li-other-class="page-item"
                      cs-pager-li-non-active-class="page-item disabled"
                      cs-pager-link-current-class="page-link"
                      cs-pager-link-other-class="page-link"
                      cs-preserve-ambient-querystring="true"
                      cs-paging-maxpageritems="2"
                      asp-basehref="~/logevents">
            </cs-pager>
        </nav>
    </div>
</div>

