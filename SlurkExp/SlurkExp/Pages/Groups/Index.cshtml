@page
@model IndexModel
@{
    ViewData["Title"] = "Groups";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="dpCardHeaderTitle"><h5><i class="bi-box"></i> Groups</h5></div>
            <div class="dpCardHeaderControl">
                <a class="btn btn-outline-dark" href="~/"><i class="bi-arrow-left-square"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm dpTable">
            <thead>
                <tr>
                    <th width="50px">GId</th>
                    <th width="50px">TId</th>
                    <th width="250px">Name</th>
                    <th>Status</th>
                    <th>Seats</th>
                    <th>WRoom</th>
                    <th>CRoom</th>
                    <th>Checkin</th>
                    <th>Checkout</th>
                    <th>Sort Order</th>
                    <th width="50px">&nbsp;</th>
                    <th width="50px">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Groups)
                {
                    <tr>
                        <td><a href="~/groups/detail/@p.GroupId" class="not-active">@p.GroupId</a></td>
                        <td><a href="~/treatments/detail/@p.TreatmentId" class="not-active">@p.TreatmentId</a></td>
                        <td>@p.Name</td>
                        <td>@p.Status</td>
                        <td>@p.Seats</td>
                        <td>
                            @if (p.WaitingRoomId.Equals(0))
                            {
                                <span>-</span>
                            }
                            else
                            {
                                <a href="~/chatlogs/@p.WaitingRoomId">@p.WaitingRoomId</a>
                            }
                        </td>
                        <td>
                            @if (p.WaitingRoomId.Equals(0))
                            {
                                <span>-</span>
                            }
                            else
                            {
                                <a href="~/chatlogs/@p.ChatRoomId">@p.ChatRoomId</a>
                            }
                        </td>
                        <td>@p.Checkin</td>
                        <td>@p.Checkout</td>
                        <td>@p.SortGroup | @p.SortOrder</td>
                        <td align="right"><a href="~/groups/edit/@p.GroupId">Edit</a></td>
                        <td align="right"><a href="~/groups/detail/@p.GroupId">Detail</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <nav aria-label="Pagination">
            <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
                      cs-paging-pagenumber="@Model.Paging.CurrentPage"
                      cs-paging-totalitems="@Model.Paging.TotalItems"
                      cs-pagenumber-param="p"
                      cs-show-first-last="false"
                      cs-suppress-empty-nextprev="true"
                      cs-suppress-inactive-firstlast="true"
                      cs-first-page-text="First"
                      cs-last-page-text="Last"
                      cs-pager-ul-class="pagination"
                      cs-pager-li-current-class="page-item active"
                      cs-pager-li-other-class="page-item"
                      cs-pager-li-non-active-class="page-item disabled"
                      cs-pager-link-current-class="page-link"
                      cs-pager-link-other-class="page-link"
                      cs-preserve-ambient-querystring="true"
                      cs-paging-maxpageritems="2"
                      asp-basehref="~/groups">
            </cs-pager>
        </nav>
    </div>
</div>

