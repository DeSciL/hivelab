@page "{id}"
@model DetailModel
@{
    ViewData["Title"] = "Groups";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="dpCardHeaderTitle"><h5><i class="bi-box"></i> Group</h5></div>
            <div class="dpCardHeaderControl">
                <form method="post">
                    <input type="hidden" asp-for="Group.GroupId" />
                    <input type="hidden" asp-for="Group.Created" />
                    <button type="submit" class="btn btn-outline-dark" asp-page-handler="Copy"><i class="bi-clipboard-plus"></i> Copy</button>
                    <a class="btn btn-outline-dark" href="~/groups/edit/@Model.Group.GroupId"><i class="bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-outline-dark" href="~/groups"><i class="bi-arrow-left-square"></i> Back</a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="dpDetailHeader"><i class="bi-bookmarks"></i> Detail</div>
                    <table class="table table-small dpDetailTable">
                        <tbody>
                            <tr>
                                <td>Group Id</td>
                                <td>@Model.Group.GroupId</td>
                            </tr>
                            <tr>
                                <td>Treatment Id</td>
                                <td>@Model.Group.TreatmentId</td>
                            </tr>
                            <tr>
                                <td>Name</td>
                                <td>@Model.Group.Name</td>
                            </tr>
                            <tr>
                                <td>Sort Group</td>
                                <td>@Model.Group.SortGroup</td>
                            </tr>
                            <tr>
                                <td>Sort Order</td>
                                <td>@Model.Group.SortOrder</td>
                            </tr>
                            <tr>
                                <td>Seats</td>
                                <td>@Model.Group.Seats</td>
                            </tr>
                            <tr>
                                <td>Overbook</td>
                                <td>@Model.Group.Overbook</td>
                            </tr>
                            <tr>
                                <td>Bots</td>
                                <td>@Model.Group.Bots</td>
                            </tr>
                            <tr>
                                <td>Create Date</td>
                                <td>@Model.Group.Created.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <td>Last Update</td>
                                <td>@Model.Group.Updated.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-6">
                    <div class="dpDetailHeader"><i class="bi-command"></i> Status</div>
                    <table class="table table-small dpDetailTable">
                        <tbody>
                            <tr>
                                <td>Status</td>
                                <td>@Model.Group.Status</td>
                            </tr>
                            <tr>
                                <td>Check-in</td>
                                <td>@Model.Group.Checkin</td>
                            </tr>
                            <tr>
                                <td>Check-out</td>
                                <td>@Model.Group.Checkout</td>
                            </tr>
                            <tr>
                                <td>Waiting Room</td>
                                <td>@Model.Group.WaitingRoomId</td>
                            </tr>
                            <tr>
                                <td>Waiting Room Time</td>
                                <td>@Model.Group.WaitingRoomTime</td>
                            </tr>
                            <tr>
                                <td>Chat Room</td>
                                <td>@Model.Group.ChatRoomId</td>
                            </tr>
                            <tr>
                                <td>Chat Room Time</td>
                                <td>@Model.Group.ChatRoomTime</td>
                            </tr>
                            <tr>
                                <td>JSON</td>
                                <td>@Model.Group.GroupJson</td>
                            </tr>
                            <tr>
                                <td>Comment</td>
                                <td>@Model.Group.Comment</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="dpDetailHeader"><i class="bi-box"></i> Clients</div>
                    <table class="table table-striped table-sm dpTable">
                        <thead>
                            <tr>
                                <th width="50px">CId</th>
                                <th width="50px">GId</th>
                                <th width="50px">Status</th>
                                <th>AccessCode</th>
                                <th>ClientToken</th>
                                <th>ChatName</th>
                                <th>ChatToken</th>
                                <th width="75px">&nbsp;</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.Clients)
                            {
                                <tr>
                                    <td><a href="~/clients/detail/@p.ClientId" class="not-active">@p.ClientId</a></td>
                                    <td><a href="~/groups/detail/@p.GroupId" class="not-active">@p.GroupId</a></td>
                                    <td>@p.Status</td>
                                    <td>@p.AccessCode</td>
                                    <td>@p.ClientToken</td>
                                    <td>@p.ChatName</td>
                                    <td><a href="~/users/@p.ChatToken">@p.ChatToken</a></td>
                                    <td align="right"><a href="~/clients/detail/@p.ClientId">Detail</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="dpDetailHeader"><i class="bi-box"></i> Waiting Room</div>
                    <table class="table table-striped table-sm dpTable">
                        <thead>
                            <tr>
                                <th width="70px">Id</th>
                                <th width="180px">DateCreated</th>
                                <th width="75px">RoomId</th>
                                <th width="75px">Event</th>
                                <th width="75px">UserId</th>
                                <th width="100px">UserName</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.WaitLogs)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.DateCreated.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>@p.RoomId</td>
                                    <td>@Model.FormatEvent(@p.Event)</td>
                                    <td><a href="~/users/@p.UserId">@p.UserId</a></td>
                                    <td>@p.User.Name</td>
                                    <td>@Model.FormatMessage(p.Data)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> 
            </div>
            <div class="row">
                <div class="col">
                    <div class="dpDetailHeader"><i class="bi-box"></i> Chat Room</div>
                    <table class="table table-striped table-sm dpTable">
                        <thead>
                            <tr>
                                <th width="70px">Id</th>
                                <th width="180px">DateCreated</th>
                                <th width="75px">RoomId</th>
                                <th width="75px">Event</th>
                                <th width="75px">UserId</th>
                                <th width="100px">UserName</th>
                                <th>Data</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var p in Model.ChatLogs)
                            {
                                <tr>
                                    <td>@p.Id</td>
                                    <td>@p.DateCreated.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                                    <td>@p.RoomId</td>
                                    <td>@Model.FormatEvent(@p.Event)</td>
                                    <td><a href="~/users/@p.UserId">@p.UserId</a></td>
                                    <td>@p.User.Name</td>
                                    <td>@Model.FormatMessage(p.Data)</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>