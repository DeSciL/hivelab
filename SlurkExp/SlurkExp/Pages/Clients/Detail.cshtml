@page "{id}"
@model DetailModel
@{
    ViewData["Title"] = "Clients";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="dpCardHeaderTitle"><h5><i class="bi-box"></i> Client</h5></div>
            <div class="dpCardHeaderControl">
                <form method="post">
                    <input type="hidden" asp-for="Client.ClientId" />
                    <input type="hidden" asp-for="Client.Created" />
                    <a class="btn btn-outline-dark" href="~/clients/edit/@Model.Client.ClientId"><i class="bi-pencil-square"></i> Edit</a>
                    <a class="btn btn-outline-dark" href="~/clients"><i class="bi-arrow-left-square"></i> Back</a>
                </form>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="dpDetailHeader"><i class="bi-bookmarks"></i> Detail</div>
                    <table class="table table-small dpDetailTable">
                        <tbody>
                            <tr>
                                <td>Client Id</td>
                                <td>@Model.Client.ClientId</td>
                            </tr>
                            <tr>
                                <td>Group Id</td>
                                <td>@Model.Client.GroupId</td>
                            </tr>
                            <tr>
                                <td>Status</td>
                                <td>@Model.Client.Status</td>
                            </tr>
                            <tr>
                                <td>ChatName</td>
                                <td>@Model.Client.ChatName</td>
                            </tr>
                            <tr>
                                <td>AccessCode</td>
                                <td>@Model.Client.AccessCode</td>
                            </tr>
                            <tr>
                                <td>ClientToken</td>
                                <td>@Model.Client.ClientToken</td>
                            </tr>
                            <tr>
                                <td>ChatToken</td>
                                <td>@Model.Client.ChatToken</td>
                            </tr>
                            <tr>
                                <td>Create Date</td>
                                <td>@Model.Client.Created.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <td>Last Update</td>
                                <td>@Model.Client.Updated.UtcToLocalUserTime().ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="col-lg-6">
                    <div class="dpDetailHeader"><i class="bi-command"></i> Comment</div>
                    <table class="table table-small dpDetailTable">
                        <tbody>
                            <tr>
                                <td>JSON</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.Client.ClientJson))
                                    {
                                        <span>@Model.Client.ClientJson.Replace(",", ", ")</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <td>Comment</td>
                                <td>@Model.Client.Comment</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>