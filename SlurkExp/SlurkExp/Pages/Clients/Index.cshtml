@page
@model IndexModel
@{
    ViewData["Title"] = "Clients";
}

<div class="card shadow">
    <div class="card-header">
        <div class="d-flex justify-content-between">
            <div class="dpCardHeaderTitle"><h5><i class="bi-box"></i> Clients</h5></div>
            <div class="dpCardHeaderControl">
                <a class="btn btn-outline-dark" href="~/"><i class="bi-arrow-left-square"></i> Back</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped table-sm dpTable">
            <thead>
                <tr>
                    <th width="50px">CId</th>
                    <th width="50px">GId</th>
                    <th width="50px">Status</th>
                    <th>AccessCode</th>
                    <th>ClientToken</th>
                    <th>ChatName</th>
                    <th>ChatToken</th>
                    <th width="50px">&nbsp;</th>
                    <th width="50px">&nbsp;</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Clients)
                {
                    <tr>
                        <td><a href="~/clients/detail/@p.ClientId" class="not-active">@p.ClientId</a></td>
                        <td><a href="~/groups/detail/@p.GroupId" class="not-active">@p.GroupId</a></td>
                        <td>@p.Status</td>
                        <td>@p.AccessCode</td>
                        <td>@p.ClientToken</td>
                        <td>@p.ChatName</td>
                        <td><a href="~/users/@p.ChatToken">@p.ChatToken</a></td>
                        <td align="right"><a href="~/clients/edit/@p.ClientId">Edit</a></td>
                        <td align="right"><a href="~/clients/detail/@p.ClientId">Detail</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <nav aria-label="Pagination">
            <cs-pager cs-paging-pagesize="@Model.Paging.ItemsPerPage"
                      cs-paging-pagenumber="@Model.Paging.CurrentPage"
                      cs-paging-totalitems="@Model.Paging.TotalItems"
                      cs-pagenumber-param="p"
                      cs-show-first-last="false"
                      cs-suppress-empty-nextprev="true"
                      cs-suppress-inactive-firstlast="true"
                      cs-first-page-text="First"
                      cs-last-page-text="Last"
                      cs-pager-ul-class="pagination"
                      cs-pager-li-current-class="page-item active"
                      cs-pager-li-other-class="page-item"
                      cs-pager-li-non-active-class="page-item disabled"
                      cs-pager-link-current-class="page-link"
                      cs-pager-link-other-class="page-link"
                      cs-preserve-ambient-querystring="true"
                      cs-paging-maxpageritems="2"
                      asp-basehref="~/clients">
            </cs-pager>
        </nav>
    </div>
</div>

